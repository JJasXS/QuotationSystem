
@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div style="text-align:center; margin: 20px 0;">
    <a href="/Chat" class="btn btn-primary" style="padding: 10px 24px; font-size: 1.1em;">Go to Chat</a>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<h2>Database Test</h2>
<form method="post">
    <button type="submit">Test Database Connection</button>
</form>
@if (Model.DbResult != null)
{
    <div>
        <strong>Result:</strong>
        <pre>@Model.DbResult</pre>
    </div>
    if (Model.TableNames != null)
    {
        <div>
            <strong>Tables:</strong>
            <ul>
            @foreach (var table in Model.TableNames)
            {
                <li>@table</li>
            }
            </ul>
        </div>
    }
}
